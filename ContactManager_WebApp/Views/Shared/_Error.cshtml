@model ContactManager_WebApp.DataAccess.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1>An error occurred</h1>
<p>@Model.Message</p>

@if (!string.IsNullOrEmpty(Model.Details))
{
    <h3>Details:</h3>
    <p>@Model.Details</p>
}

<a href="@Url.Action("Index", "Contacts")">Return to Home Page</a>

